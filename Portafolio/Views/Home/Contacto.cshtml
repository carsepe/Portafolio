
@{
    ViewData["Title"] = "Contacto";
}

<div class="container">
    <h1 class="text-center mb-3">Formulario de contacto</h1>
    <form asp-controller="Home" asp-action="Contacto" class="mx-auto" style="max-width: 400px;">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Fulando de tal" />
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="nombre@ejemplo.com" />
        </div>

        <div class="mb-3">
            <label for="mensaje" class="form-label">Mensaje</label>
            <textarea class="form-control" id="mensaje" name="mensaje" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary btn-lg btn-block">Enviar</button>
    </form>
</div>
